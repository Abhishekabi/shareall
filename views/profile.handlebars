<div class="fcontainer">
    <div class="left-pannel">
        <div class="search-pannel">
            <div class="pannel-text">Find Friends</div>
            <div class="search-box">
                <input type="text" placeholder="Eg : johndoe@gmail.com" />
                <button class="search-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="17.765" height="18.438" viewBox="0 0 17.765 18.438">
                        <g transform="translate(-0.293)">
                            <g transform="translate(3.058)" fill="#fff" stroke="#9b9a9a" stroke-width="2">
                                <circle cx="7.5" cy="7.5" r="7.5" stroke="none" />
                                <circle cx="7.5" cy="7.5" r="6.5" fill="none" />
                            </g>
                            <line x1="5.286" y2="5.286" transform="translate(1 12.444)" fill="none" stroke="#9b9a9a"
                                stroke-width="2" />
                        </g>
                    </svg>
                </button>
            </div>
        </div>
        <div class="contacts-bar">
            <div class="pannel-text">Recent Shares</div>
            <div class="contacts">
                <div class="contact">
                    <span class="status"></span>
                    <div class="user-img">
                        <img src="./img/uimg.png" alt="" />
                    </div>
                    <div class="user-name">
                        Jane Doe
                    </div>
                    <div class="options"></div>
                </div>
                <div class="contact">
                    <span class="status"></span>
                    <div class="user-img">
                        <img src="./img/uimg2.png" alt="" />
                    </div>
                    <div class="user-name">
                        Emilia Clark
                    </div>
                    <div class="options"></div>
                </div>
                <div class="contact">
                    <span class="status"></span>
                    <div class="user-img">
                        <img src="./img/uimg.png" alt="" />
                    </div>
                    <div class="user-name">
                        Aliabut
                    </div>
                    <div class="options"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="right-pannel">
        <div class="chat-head">
            <div class="status"></div>
            <div class="user-img">
                <img src="./img/uimg2.png" alt="" />
            </div>
            <div class="user-name">Shanthi</div>
            <div class="options close-chat-btn"></div>
        </div>
        <div class="chat-body">
            <div class="main-pannel">
                <div class="fileshare">
                    <div class="top-wrapper">
                        <div class="fileshare-progress">
                            <div class="media-icon">
                                <img src="./img/media-icon.svg" alt="" />
                            </div>
                            <div class="progressbar">
                                <div class="file-name">
                                    Avengers the end game final chap....mp4
                                </div>
                                <div class="main-bar">
                                    <span class="sub-bar" style="width: 10%;"></span>
                                </div>
                                <div class="share-percentage">
                                    10%
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="bottom-wrapper">
                        <div class="fileshare-statusbar">
                            <span id="fileshare-state">Downloading...</span>
                            <div class="fileshare-btn">
                                <div class="button accept-btn">Accept</div>
                                <div class="button cancel-btn">Cancel</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="chat-footer">
                <div class="button send-btn">Send File</div>
                <div class="footer-text">select a file to share</div>
            </div>
        </div>
    </div>
</div>